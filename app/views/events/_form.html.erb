<%= form_with(model: event) do |form| %>
    <% if event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(event.errors.count, "error") %> prohibited this ticket from being saved:</h2>
  
        <ul>
          <% event.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field new_field">
      <%= form.label :wykonawca %>
      <%= form.text_field :artist %>
    </div>
  
    <div class="field new_field">
      <%= form.label :"opis wydarzenia" %>
      <%= form.text_field :description %>
    </div>
  
    <div class="field new_field">
      <%= form.label :"najniższa cena" %>
      <%= form.text_field :price_low %>
    </div>
  
    <div class="field new_field">
      <%= form.label :"najwyższa cena" %>
      <%= form.text_field :price_high %>
    </div>
  
    <div class="field new_field">
      <%= form.label :"data wydarzenia" %>
      <%= form.date_field :event_date %>
    </div>

    <div class="actions text-center">
      <%= form.submit :"Zapisz wydarzenie", class:'btn btn-info text-dark' %>
    </div>
  <% end %>
  