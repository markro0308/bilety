<div class="d-flex flex-column justify-content-center mx-auto" >
  <p id="notice"><%= notice %></p>

  <h1 class="text-center">Bilety</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Imie</th>
        <th>Miejsce</th>
        <th>Adres</th>
        <th>Cena</th>
        <th>Adres email</th>
        <th>Numer telefonu</th>
        <th>Numer eventu</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @event.tickets.each do |ticket| %>
        <tr>
          <td><%= ticket.name %></td>
          <td><%= ticket.seat_id_seq %></td>
          <td><%= ticket.address %></td>
          <td><%= ticket.price %></td>
          <td><%= ticket.email_address %></td>
          <td><%= ticket.phone %></td>
          <td><%= ticket.event_id %></td>
          <td><%= link_to 'Pokaż', ticket %></td>
          <% if (user_signed_in?) && (ticket.user == current_user) %>
            <td><%= link_to 'Edytuj', edit_ticket_path(ticket) %></td>
            <td><%= link_to 'Usuń', ticket, method: :delete, data: { confirm: 'Czy jesteś pewien, że chcesz usunąć bilet?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

