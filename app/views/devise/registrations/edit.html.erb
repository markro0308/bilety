<section class="jumbotron5 jumbotron-fluid w-100"> 
  <div class="main_content d-flex flex-column align-items-center mx-auto" >
    <h2>Edycja <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Oczekiwanie na potwierdzenie: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :hasło %> <i>(zostaw puste jeśli nie chcesz zmieniać hasła)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em>minimum <%= @minimum_password_length %> znaków</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :potwierdź_hasło %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :aktualne_hasło %> <i>(podaj aktualne hasło aby potwierdzić zmiany)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>
      </br>
      <div class="actions">
        <%= f.submit "Zaktualizuj", class:'btn btn-info' %>
      </div>
      </br>
    <% end %>

    <h3>Zlikwiduj moje konto</h3>

    <p>Niezadowolony? <%= button_to "Zlikwiduj moje konto", registration_path(resource_name), data: { confirm: "Jesteś pewny?" }, method: :delete, class:'btn btn-info' %></p>

    <p class="navbar-text mt-0">
          <button type="button" class="btn btn-info"><%= link_to "Cofnij", :back, :class => 'text-light' %></button>
    </p>
  </div>
</section>
