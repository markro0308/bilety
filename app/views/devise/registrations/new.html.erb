<section class="jumbotron5 jumbotron-fluid w-100"> 
  <div class="main_content d-flex flex-column align-items-center mx-auto" >

    <h2>Rejestracja</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :hasło %>
        <% if @minimum_password_length %>
        <em>(minimum <%= @minimum_password_length %> znaków)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :potwierdź_hasło %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      </br>
      <div class="actions mb-2">
        <%= f.submit "Utwórz konto", class:'btn btn-info' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</section>