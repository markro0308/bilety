<section class="jumbotron5 jumbotron-fluid w-100"> 
  <div class="main_content d-flex flex-column align-items-center mx-auto" >
    <h2>Zapomniałeś hasła?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="actions mb-2 mt-2">
        <%= f.submit "Wyślij instrukcje przywracania hasła", class:'btn btn-info' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>
