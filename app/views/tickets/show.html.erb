
<section class="jumbotron4 jumbotron-fluid w-100"> 
  <div class="main_content container d-flex flex-column align-items-center mx-auto" >

    <p>
      <strong>Numer eventu:</strong>
      <%= @ticket.event_id %>
    </p>

    <p>
      <strong>Imie:</strong>
      <%= @ticket.name %>
    </p>

    <p>
      <strong>Miejsce:</strong>
      <%= @ticket.seat_id_seq %>
    </p>

    <% if (user_signed_in?) && (@ticket.user == current_user) %>
      <p>
        <strong>Adres:</strong>
        <%= @ticket.address %>
      </p>
    <% end %>

    <p>
      <strong>Cena:</strong>
      <%= @ticket.price %>
    </p>

    <% if (user_signed_in?) && (@ticket.user == current_user) %>
      <p>
        <strong>Adres email:</strong>
        <%= @ticket.email_address %>
      </p>

      <p>
        <strong>Numer telefonu:</strong>
        <%= @ticket.phone %>
      </p>
    <% end %>
    
    <p class="navbar-text mb-0">
    <% if @ticket.user == current_user %>
      <button type="button" class="btn btn-info"><%= link_to 'Edycja', edit_ticket_path(@ticket), :class => 'text-decoration-none text-dark' %></button>
    <% end %>
    <button type="button" class="btn btn-info"><%= link_to 'Wstecz', tickets_path, :class => 'text-decoration-none text-dark' %></button>
    </p>

  </div>  
</section> 